<!-- PAGE D'ENTRÉE -->
<div id="accueil">
    <h1><b>MAEVA SCHOP</b></h1>
    <button onclick="entrer()">Entrer dans la boutique</button>
</div>

<!-- BOUTIQUE -->
<div id="boutique">

<h2>Nos Produits</h2>

<div class="produits">

<script>
for(let i=1;i<=32;i++){
document.write(`
<div class="produit">
<img src="" alt="Photo Produit ${i}">
<h3>Produit ${i}</h3>
<p>Prix: 10 000 FCFA</p>
<button onclick="ajouter('Produit ${i}',10000)">Ajouter au panier</button>
</div>
`);
}
</script>

</div>

<div id="panier">
<h2>Panier</h2>
<ul id="liste"></ul>

<h3>Total: <span id="total">0</span> FCFA</h3>

<h3>Paiement Mobile Money</h3>

<select>
<option>Orange Money</option>
<option>MTN Money</option>
<option>Moov Money</option>
</select>

<input type="text" placeholder="Entrez votre numéro">

<button onclick="commander()">Commander</button>
</div>

</div>

<script>

let total = 0;

function entrer(){
    document.getElementById("accueil").style.display="none";
    document.getElementById("boutique").style.display="block";
}

function ajouter(nom, prix){

    let li=document.createElement("li");
    li.textContent=nom + " - " + prix + " FCFA";

    let btn=document.createElement("button");
    btn.textContent="X";
    btn.className="supprimer";

    btn.onclick=function(){
        li.remove();
        total -= prix;
        document.getElementById("total").textContent=total;
    };

    li.appendChild(btn);
    document.getElementById("liste").appendChild(li);

    total += prix;
    document.getElementById("total").textContent=total;
}

function commander(){

    if(total===0){
        alert("Votre panier est vide !");
    }else{
        alert("Commande confirmée ! Total: " + total + " FCFA");
    }

}

</script>

